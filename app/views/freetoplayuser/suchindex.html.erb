<% if cookies[:credits] == nil %>
  <% cookies[:credits] = 100 %>
<% end %>
<% if cookies[:credits].to_i <= 0 %>
  <% cookies[:credits] = 100 %>
<% end %>

<p>
<font size=6>
  wow! have current credits:
  <%= cookies[:credits].to_i %>
</font>
</p>

<form action="/freetoplayuser/verychest">
  <table align="center">
    <% i=0 %>
    <% while (i<11) %>
      <% if (i%2 == 0) %>
        <tr align="center">
      <% end %>
      <td>
        <div class="actions">
          <input type="image" src="/pls_open.png">
        </div>      </td>
      <% if (i%2 != 0) %>
        </tr>
      <% end %>
      <% i+=1 %>
    <% end %>
  </table>
</form>
